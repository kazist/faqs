    "query": {
        "from": {
            "table": "Faqs\\Faqs\\Code\\Tables\\Faqs",
            "alias": "ff",
            "name": "#__faqs_faqs"
        },
        "select": [
            "ff.id",
            "ff.title",
            "ff.category_id",
            "fc.title AS category_id_title",
            "ff.answer",
            "ff.hits",
            "ff.featured",
            "ff.published",
            "ff.created_by",
            "uu.name AS created_by_name",
            "ff.date_created",
            "ff.modified_by",
            "uu_6042.name AS modified_by_name",
            "ff.date_modified"
        ],
        "leftjoin": [
            {
                "table": "Faqs\\Categories\\Code\\Tables\\Categories",
                "alias": "fc",
                "name": "#__faqs_categories",
                "on": "ff.category_id = fc.id"
            },
            {
                "table": "Users\\Users\\Code\\Tables\\Users",
                "alias": "uu",
                "name": "#__users_users",
                "on": "ff.created_by = uu.id"
            },
            {
                "table": "Users\\Users\\Code\\Tables\\Users",
                "alias": "uu_6042",
                "name": "#__users_users",
                "on": "ff.modified_by = uu_6042.id"
            }
        ]
    }
